{
  "name": "vslang-br",
  "displayName": "vslang-br",
  "description": "Language support for Business Rules!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:br"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vslang-br.compile",
        "title": "Compile BR Program"
      }
    ],
    "snippets": [
      {
        "language": "br",
        "path": "snippets/fileio.json"
      },
      {
        "language": "br",
        "path": "snippets/lexi.json"
      },
      {
        "language": "br",
        "path": "snippets/loops.json"
      }
    ],
    "languages": [
      {
        "id": "br",
        "aliases": [
          "Business Rules!",
          "br"
        ],
        "extensions": [
          ".brs",
          ".wbs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "br",
        "scopeName": "source.br",
        "path": "./syntaxes/br.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
