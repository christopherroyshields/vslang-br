{
  "name": "vslang-br",
  "displayName": "vslang-br",
  "description": "Language support for Business Rules!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Business Rules!",
      "properties": {
        "languageServer.completions.includeFileio": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enables integrated completions for Fileio functions"
        },
        "languageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "keybindings": [
      {
        "command": "vslang-br.compile",
        "key": "ctrl-alt-1"
      },
      {
        "command": "vslang-br.run",
        "key": "ctrl-alt-2"
      },
      {
        "command": "vslang-br.addLineNumbers",
        "key": "ctrl-alt-3"
      },
      {
        "command": "vslang-br.stripLineNumbers",
        "key": "ctrl-alt-3"
      },
      {
        "command": "vslang-br.setBr41",
        "key": "ctrl-alt-4"
      },
      {
        "command": "vslang-br.setBr42",
        "key": "ctrl-alt-5"
      },
      {
        "command": "vslang-br.setBr43",
        "key": "ctrl-alt-6"
      },
      {
        "command": "vslang-br.nextOccurrence",
        "key": "ctrl-shift-down"
      },
      {
        "command": "vslang-br.prevOccurrence",
        "key": "ctrl-shift-up"
      }
    ],
    "commands": [
      {
        "command": "vslang-br.nextOccurrence",
        "title": "Next Occurrence"
      },
      {
        "command": "vslang-br.prevOccurrence",
        "title": "Previous Occurrence"
      },
      {
        "command": "vslang-br.compile",
        "title": "Lexi: Compile BR Program"
      },
      {
        "command": "vslang-br.run",
        "title": "Lexi: Run BR Program"
      },
      {
        "command": "vslang-br.addLineNumbers",
        "title": "Lexi: Add Line Numbers to BR Source"
      },
      {
        "command": "vslang-br.stripLineNumbers",
        "title": "Lexi: Strip Line Numbers from BR Source"
      },
      {
        "command": "vslang-br.setBr41",
        "title": "Lexi: Set BR Version 4.1"
      },
      {
        "command": "vslang-br.setBr42",
        "title": "Lexi: Set BR Version 4.2"
      },
      {
        "command": "vslang-br.setBr43",
        "title": "Lexi: Set BR Version 4.3"
      }
    ],
    "snippets": [
      {
        "language": "br",
        "path": "snippets/fileio.json"
      },
      {
        "language": "br",
        "path": "snippets/lexi.json"
      },
      {
        "language": "br",
        "path": "snippets/loops.json"
      },
      {
        "language": "br",
        "path": "snippets/statements.json"
      }
    ],
    "languages": [
      {
        "id": "br",
        "aliases": [
          "Business Rules!",
          "br"
        ],
        "extensions": [
          ".brs",
          ".wbs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "br",
        "scopeName": "source.br",
        "path": "./syntaxes/br.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7"
  }
}
